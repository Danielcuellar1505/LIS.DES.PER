<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnToggleDeudores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="Grafico de deudores ðŸ”½"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="?attr/colorOnPrimary"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:contentDescription="Alternar visibilidad de deudores"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/deudoresContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnToggleDeudores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartDeudores"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="GrÃ¡fico de estado de deudas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvTodayDeudoresItemsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Deudas de hoy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/pieChartDeudores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/headerTablaDeudores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTodayDeudoresItemsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/hNombreDeudores"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/hDetalleDeudores"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Detalle"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/hMontoDeudores"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Monto"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/hCanceladoDeudores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PagÃ³"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTodayDeudoresItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Lista de deudas de hoy"
                app:layout_constraintTop_toBottomOf="@id/headerTablaDeudores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/separadorBotones"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ffca42"
            app:layout_constraintTop_toBottomOf="@id/deudoresContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/btnToggleAcreedores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="Grafico de Acreedores ðŸ”½"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="?attr/colorOnPrimary"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:contentDescription="Alternar visibilidad de acreedores"
            app:layout_constraintTop_toBottomOf="@id/deudoresContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/acreedoresContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnToggleAcreedores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartAcreedores"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="GrÃ¡fico de estado de acreedores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvTodayAcreedoresItemsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Acreedores de hoy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/pieChartAcreedores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/headerTablaAcreedores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTodayAcreedoresItemsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/hNombreAcreedores"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/hDetalleAcreedores"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Detalle"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/hMontoAcreedores"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Monto"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/hCanceladoAcreedores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PagÃ³"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTodayAcreedoresItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Lista de acreedores de hoy"
                app:layout_constraintTop_toBottomOf="@id/headerTablaAcreedores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>